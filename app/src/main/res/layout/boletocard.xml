<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_boleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#00000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="5dp"

        >
        <LinearLayout
            android:background="@drawable/bg_card2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Id Boleto:"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/codigoBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codigo I"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/nombreBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cliente I"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nit :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/nitBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nit 1"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asiento :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/asientoBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asiento 1"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo Bus:"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tipoBusBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tipo bus 1"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destino :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/destinoBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="destino 1"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horario :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/horarioBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horario salida"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha Salida :"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        />
                    <TextView
                        android:id="@+id/fechaBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="horario salida"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio Venta:"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/precioBoletoC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio Boleto"
                        android:textSize="14dp"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>